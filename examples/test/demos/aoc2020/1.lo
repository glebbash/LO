include "../../../lib/cli.lo";
include "../../../lib/fs.lo";

fn main() {
    let input = fs::read_file!("./examples/test/demos/aoc2020/1.txt");
    defer input.free();

    let numbers = parse_numbers(input);
    defer numbers.free();

    for i in 0..numbers.size {
        let a = numbers.get!<u32>(i);

        for j in 0..numbers.size {
            let b = numbers.get!<u32>(j);
            if a + b == 2020 {
                print_u32(a * b);
                puts("\n");
                return;
            };
        };
    };
};

fn parse_numbers(input: String): &Vec of u32 {
    let numbers = Vec::new!<u32>();
    let current_number = 0;

    for i in 0..input.len() {
        let char = input.char_at(i);
        if char >= '0' && char <= '9' {
            current_number *= 10;
            current_number += (char - '0') as u32;
        };

        if char == '\n' {
            numbers.push!<u32>(current_number);
            current_number = 0;
        };
    };

    return numbers;
};
