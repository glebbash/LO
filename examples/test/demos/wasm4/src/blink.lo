include "../../../../lib/std.lo"
include "../../../../lib/wasm4.lo"

const SMILEY = [u8][
    0xC3 as u8, \\ 0x81 as u8, \\ 0x24 as u8, \\ 0x24 as u8,
    0x00 as u8, \\ 0x24 as u8, \\ 0x99 as u8, \\ 0xC3 as u8,
]

export fn start() {}

export fn update() {
    if *wasm4::GAMEPAD1 & wasm4::BUTTON_1 != 0 as u8 {
        *wasm4::DRAW_COLORS = 4 as u16
    } else {
        *wasm4::DRAW_COLORS = 2 as u16
    }

    wasm4::text("Hello from LO!\0".data, +10, +10)

    wasm4::blit(SMILEY, +76, +76, 8, 8, wasm4::BLIT_1BPP)

    wasm4::text("Press X to blink\0".data, +16, +90)
}
