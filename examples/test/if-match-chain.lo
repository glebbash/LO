include "../lib/cli.lo"

type Dir = enum (u32) {
    Left(u32),
    Right(u32),
}

fn main() {
    go(Dir::Left(5))
    go(Dir::Right(3))
}

fn go(dir: Dir) {
    if match Dir::Left(steps) = dir {
        print("going left ")
        print(steps.to_tmp_str!())
        print(" steps\n")
    } else if match Dir::Right(steps) = dir {
        print("going right ")
        print(steps.to_tmp_str!())
        print(" steps\n")
    }
}
